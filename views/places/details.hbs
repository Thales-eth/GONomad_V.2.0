<h1>Debería salir detalles de la ciudad</h1>
<p>{{name}}</p>
<h2>Algunas imágenes de {{name}}:</h2>

<div class="row">
    {{#each photos}}
    <div class="col-3">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{this}}" alt="Card image cap">
        </div>
    </div>
    {{/each}}
</div>


<a href="/places/details/restaurants/{{name}}/list" class="btn btn-primary">Restaurantes</a>
<a href="/places/details/coworking/{{name}}/list" class="btn btn-primary">Coworkings</a>
<a href="/places/details/clubs/{{name}}/list" class="btn btn-primary">Clubes</a>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Review</h1>
            <hr>
            <form action="/reviews/write/{{place_id}}" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Subject</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="review" class="form-label">Review</label>
                    <input type="text" class="form-control" id="review" name="review">
                </div>

                <button type="submit" class="btn btn-success">Submit review</button>
            </form>
        </div>
    </div>
</div>

<p>Esto es el título: {{title}}</p>
<p>Esto es la review: {{review}}</p>